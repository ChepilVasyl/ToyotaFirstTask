@model IEnumerable<ToyotaProject.Models.MyModels.ColorModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodeColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlColor)
            </th>
            <th>
                <span>Img</span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodeColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlColor)
            </td>
            <td>
                <img src="/@item.UrlColor" width="50px"/>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
